<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/daily_quiz_not_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="@string/daily_quiz_not_available"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/daily_quiz_available_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:text="@string/available_date"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/ok_quiz_results"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#5AA8AF"
        android:layout_marginTop="15sp"
        android:textSize="25sp"
        android:text="@string/ok"
        android:textColor="@color/white" />

</LinearLayout>